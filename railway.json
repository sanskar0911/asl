{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "serve": {
      "command": "start.sh"
    }
  },
  "deploy": {
    "startCommand": "gunicorn --worker-class eventlet -w 1 app:app --bind 0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
